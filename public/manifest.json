  "screenshots": [
    {
      "src": "/screenshots/desktop-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Dashboard view showing expense analytics"
    },
    {
      "src": "/screenshots/mobile-1.png",
      "sizes": "375x812",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile expense tracking interface"
    },
    {
      "src": "/screenshots/mobile-2.png",
      "sizes": "375x812",
      "type": "image/png",
      "form_factor": "narrow",
